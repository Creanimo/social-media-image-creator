<wa-details summary="Background">
    <div class="wa-stack">
        <input type="hidden" name="backgroundImageId" value="{{creation.backgroundImageId}}" />
        {{#bgSrc}}
        <img src="{{bgSrc}}" style="width: 100%; height: 150px; object-fit: cover; border: 1px solid #eee; margin-bottom: 10px;" />
        {{/bgSrc}}
        {{^bgSrc}}
        <div style="width: 100%; height: 150px; background: #eee; display: flex; align-items: center; justify-content: center; margin-bottom: 10px;">
            <wa-icon name="photo" library="tabler" style="font-size: 2rem; color: #999;"></wa-icon>
        </div>
        {{/bgSrc}}
        
        <wa-button id="open-gallery-btn" variant="neutral">
            <wa-icon name="photo" library="tabler" slot="prefix"></wa-icon>
            Change from Gallery
        </wa-button>
        <wa-button id="upload-bg-btn" variant="neutral">
            <wa-icon name="upload" library="tabler" slot="prefix"></wa-icon>
            Upload New
        </wa-button>
        <input type="file" id="editor-bg-upload" accept="image/*" style="display: none;" />

        <div class="wa-stack" style="gap: 5px;">
            <div class="wa-flank:end">
                <wa-slider id="slider-bg-scale" label="Scale" name="backgroundScale" value="{{creation.backgroundScale}}" min="0.1" max="3" step="0.01" with-tooltip></wa-slider>
                <wa-button variant="neutral" circle size="small" class="reset-slider-btn" data-target="backgroundScale" data-default="1.0" style="margin-top: 25px;">
                    <wa-iconname="reset" library="tabler"></wa-icon>
                </wa-button>
            </div>
            <div class="wa-flank:end">
                <wa-slider id="slider-bg-x" label="Position X" name="backgroundX" value="{{creation.backgroundX}}" min="-{{creation.width}}" max="{{creation.width}}" step="1" with-tooltip></wa-slider>
                <wa-button variant="neutral" circle size="small" class="reset-slider-btn" data-target="backgroundX" data-default="0" style="margin-top: 25px;">
                    <wa-iconname="reset" library="tabler"></wa-icon>
                </wa-button>
            </div>
            <div class="wa-flank:end">
                <wa-slider id="slider-bg-y" label="Position Y" name="backgroundY" value="{{creation.backgroundY}}" min="-{{creation.height}}" max="{{creation.height}}" step="1" with-tooltip></wa-slider>
                <wa-button variant="neutral" circle size="small" class="reset-slider-btn" data-target="backgroundY" data-default="0" style="margin-top: 25px;">
                    <wa-iconname="reset" library="tabler"></wa-icon>
                </wa-button>
            </div>
        </div>
    </div>
</wa-details>
