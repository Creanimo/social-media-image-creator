<div class="icon-picker-container wa-stack" style="gap: 10px;">
    {{#label}}<wa-text size="small"><strong>{{label}}</strong></wa-text>{{/label}}
    <div class="icon-picker-control" style="display: flex; gap: 10px; align-items: center;">
        <wa-button id="icon-picker-trigger-{{id}}" variant="neutral" style="flex: 1;">
            <wa-icon id="icon-picker-preview-{{id}}" name="{{value}}" library="tabler" slot="prefix"></wa-icon>
            <span id="icon-picker-label-{{id}}">{{value}}</span>
        </wa-button>
        <wa-button id="icon-picker-clear-{{id}}" variant="neutral" circle size="small">
            <wa-icon name="x" library="tabler"></wa-icon>
        </wa-button>
    </div>
    <iconify-picker 
        id="icon-picker-{{id}}" 
        collection="tabler" 
        mode="manual" 
        hide-collection
        hidden 
        style="--picker-max-height: 300px; --picker-z-index: 1000; --picker-primary: var(--wa-color-primary-500); --picker-bg: var(--wa-color-neutral-0); --picker-text: var(--wa-color-neutral-900); --picker-border: var(--wa-color-neutral-200); --picker-hover: var(--wa-color-neutral-100); --picker-input-bg: var(--wa-color-neutral-50); --picker-icon-color: {{color}};"
    ></iconify-picker>
    <input type="hidden" name="{{name}}" value="{{value}}" id="icon-picker-input-{{id}}">
</div>
