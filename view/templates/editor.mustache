<div class="editor wa-stack">
    <div class="editor-main wa-stack" style="flex: 1; overflow: auto; padding: 20px; background: #f4f4f4; height: 100%;">
        {{#creation}}
        <wa-zoomable-frame zoom="0.5" style="width: 100%; height: 100%; min-height: 600px;">
        </wa-zoomable-frame>
        <div class="wa-cluster" style="justify-content: center; margin-top: 20px;">
            <wa-button id="download-png-btn" variant="primary">
                <wa-icon name="download" library="tabler" slot="prefix"></wa-icon>
                Download PNG
            </wa-button>
        </div>
        {{/creation}}
        {{^creation}}
        <p>No creation selected. Please start from the <a href="#gallery">Gallery</a> or <a href="#creations">My Creations</a>.</p>
        {{/creation}}
    </div>
</div>

<div id="modal-container"></div>
